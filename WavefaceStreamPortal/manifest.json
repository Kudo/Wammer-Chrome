{
    "name": "Stream Visited Links - a better history",
    "version": "__VERSION__",
    "default_locale": "en",
    "manifest_version": 2,
    "background": {
	"scripts": ["TabController.js", "moment.js", "HistoryExporter.js"]
    },
    "permissions": [
	"tabs",
	"geolocation",
	"history",
	"http://*/*",
	"https://*/*"
    ],
    "description": "__MSG_extDesc__",
    "icons": {
        "128": "StreamPortal_128.png",
        "48": "StreamPortal_48.png",
        "19": "StreamPortal_19.png"
    },
    "browser_action": {
        "default_title": "Stream Portal",
        "default_icon": "StreamPortal_19.png"
    },
    "content_scripts": [
	{
	    "matches": ["http://*/*", "https://*/*"],
	    "js": ["jquery.js", "ContentManager.js"],
	    "css": ["ReplayDialog.css"],
	    "run_at": "document_start"
	},
	{
	    "matches": ["__WFLINK__/portal/"],
	    "js": ["bootstrap/js/bootstrap.min.js", "WebViewerHandler.js"],
	    "css": ["bootstrap/css/bootstrap.min.css"]
	},
	{
	    "matches": ["__WFLINK__/timeline"],
	    "js": ["TimelineHandler.js"]
	}
    ],
    "web_accessible_resources": [
	"bootstrap/img/glyphicons-halflings.png",
	"bootstrap/img/glyphicons-halflings-white.png"
    ]
}

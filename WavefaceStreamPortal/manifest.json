{
    "name": "Stream Portal",
    "version": "__VERSION__",
    "default_locale": "en",
    "manifest_version": 2,
    "background": {
	"scripts": ["TabController.js"]
    },
    "permissions": [
	"tabs",
	"geolocation",
	"http://*/*",
	"https://*/*"
    ],
    "description": "__MSG_extDesc__",
    "icons": {
        "128": "StreamPhotoCollector_128.png",
        "48": "StreamPhotoCollector_48.png",
        "19": "StreamPhotoCollector_19.png"
    },
    "browser_action": {
        "default_title": "Stream Portal",
        "default_icon": "StreamPhotoCollector_19.png"
    },
    "content_scripts": [
	{
	    "matches": ["http://*/*", "https://*/*"],
	    "js": ["jquery.js", "ContentManager.js"]
	},
	{
	    "matches": ["__WFLINK__/test/portal", "__WFLINK__/portal/"],
	    "js": ["WebViewerHandler.js", "bootstrap/js/bootstrap.min.js"],
	    "css": ["bootstrap/css/bootstrap.min.css"]
	}
    ],
    "web_accessible_resources": [
	"bootstrap/img/glyphicons-halflings.png",
	"bootstrap/img/glyphicons-halflings-white.png"
    ]
}
